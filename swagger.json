{
    "openapi": "3.0.1",
    "info": {
        "version": "2.0.0",
        "title": "BooksReading API docs",
        "description": "API documentation for GoIT project 'BooksReading'. [Backend github repository](https://github.com/dairedo7/goit-team-project-backend)",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "consumes": [
        "application/json"
    ],
    "producers": [
        "application/json"
    ],
    "servers": [
        {
            "url": "http://localhost:3030/"
        }
    ],
    "tags": [
        {
            "name": "Auth",
            "description": "Authorization endpoints"
        },
        {
            "name": "Books",
            "description": "Book endpoints"
        },
        {
            "name": "Planning",
            "description": "Planning endpoints"
        },
        {
            "name": "User",
            "description": "User endpoints"
        }
    ],
    "paths": {
        "/auth/signup": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "User registration",
                "parameters": [],
                "requestBody": {
                    "description": "Registration's object",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/SignupRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SignupResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request (invalid request body)",
                        "content": {}
                    },
                    "409": {
                        "description": "Provided email already exists",
                        "content": {}
                    }
                }
            }
        },
        "/auth/signin": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "User authentication",
                "parameters": [],
                "requestBody": {
                    "description": "Authentication's object",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/SigninRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SigninResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request (invalid request body)",
                        "content": {}
                    },
                    "403": {
                        "description": "Email doesn't exist / Password is wrong",
                        "content": {}
                    }
                }
            }
        },
        "/auth/signout": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "Signout",
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "parameters": [],
                "responses": {
                    "204": {
                        "description": "Successful operation",
                        "content": {}
                    },
                    "400": {
                        "description": "No token provided",
                        "content": {}
                    },
                    "401": {
                        "description": "Unauthorized (invalid access token)",
                        "content": {}
                    },
                    "404": {
                        "description": "Invalid user / Invalid session",
                        "content": {}
                    }
                }
            }
        },
        "/auth/google": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "Google authentication",
                "responses": {
                    "200": {
                        "description": "Successful operation (redirect to front-end with accessToken, refreshToken and sid in query). Then use GET /user/books",
                        "content": {}
                    },
                    "403": {
                        "description": "Not registered or registered with postman",
                        "content": {}
                    }
                }
            }
        },
        "/books": {
            "post": {
                "tags": [
                    "Books"
                ],
                "summary": "Add new book to library",
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "parameters": [],
                "requestBody": {
                    "description": "Book's object",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/AddBookRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AddBookResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid request body / No token provided",
                        "content": {}
                    },
                    "401": {
                        "description": "Unauthorized (invalid access token)",
                        "content": {}
                    },
                    "404": {
                        "description": "Invalid user / Invalid session",
                        "content": {}
                    }
                }
            }
        },
        "/books/bookId": {
            "put": {
                "tags": [
                    "Books"
                ],
                "summary": "Update a book",
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "parameters": [
                    {
                        "name": "bookId",
                        "in": "path",
                        "description": "Book's id ('id' field in book's object)",
                        "required": true,
                        "type": "string"
                    }
                ],
                "requestBody": {
                    "description": "Book object",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UpdateBookRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UpdateBookResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request (invalid id) / No token provided",
                        "content": {}
                    },
                    "401": {
                        "description": "Unauthorized (invalid access token)",
                        "content": {}
                    },
                    "404": {
                        "description": "Book not found / Invalid user / Invalid session",
                        "content": {}
                    }
                }
            },
            "delete": {
                "tags": [
                    "Books"
                ],
                "summary": "Remove a book",
                "parameters": [
                    {
                        "in": "path",
                        "name": "bookId",
                        "required": true,
                        "description": "Book's id",
                        "schema": {
                            "type": "String"
                        }
                    }
                ],
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/RemoveBook"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request (invalid request body)",
                        "content": {}
                    },
                    "401": {
                        "description": "Unauthorized (invalid access token)",
                        "content": {}
                    },
                    "404": {
                        "description": "Book not found",
                        "content": {}
                    }
                }
            }
        },
        "/user/current": {
            "get": {
                "tags": [
                    "User"
                ],
                "summary": "Get user information",
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "parameters": [],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/GetCurrent"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "No token provided",
                        "content": {}
                    },
                    "401": {
                        "description": "Unauthorized (invalid access token)",
                        "content": {}
                    },
                    "404": {
                        "description": "Invalid user / Invalid session",
                        "content": {}
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "SignupRequest": {
                "required": [
                    "name",
                    "email",
                    "password"
                ],
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "User's name",
                        "example": "User"
                    },
                    "email": {
                        "type": "string",
                        "description": "User's email",
                        "format": "email",
                        "example": "example@gmail.com"
                    },
                    "password": {
                        "type": "string",
                        "description": "User's password",
                        "example": "qwerty123"
                    }
                }
            },
            "SignupResponse": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "description": "User's email",
                        "format": "email",
                        "example": "example@gmail.com"
                    },
                    "id": {
                        "type": "string",
                        "description": "User's id",
                        "example": "507f1f77bcf86cd799439011"
                    }
                }
            },
            "SigninRequest": {
                "required": [
                    "email",
                    "password"
                ],
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "description": "User's email",
                        "example": "example@gmail.com"
                    },
                    "password": {
                        "type": "string",
                        "description": "User's password",
                        "example": "qwerty123"
                    }
                }
            },
            "SigninResponse": {
                "type": "object",
                "properties": {
                    "token": {
                        "type": "string",
                        "description": "Session's access token (needed for all requests)",
                        "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1aWQiOiI1ZmMyMDg1YmQwOTM2NTI4MTA3Y2UyNzQiLCJzaWQiOiI1ZmMyZDJmY2UxZDIwNTA2NzAyYmRkMjIiLCJpYXQiOjE2MDY2MDM1MTYsImV4cCI6MTYwNjYwNzExNn0.rJ_QjU4KvA76H96RHsvOBChK0Vjbd0NmqjMxdQVJIXA"
                    },
                    "user": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "User's name",
                                "example": "User"
                            },
                            "email": {
                                "type": "string",
                                "description": "User's email",
                                "format": "email",
                                "example": "example@gmail.com"
                            }
                        }
                    }
                }
            },
            "AddBookRequest": {
                "required": [
                    "title",
                    "numberOfPages"
                ],
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string",
                        "description": "Book's title",
                        "example": "Harry Potter"
                    },
                    "author": {
                        "type": "string",
                        "description": "Book's author",
                        "example": "J. K. Rowling"
                    },
                    "year": {
                        "type": "number",
                        "description": "Book's year",
                        "example": "1997"
                    },
                    "totalPages": {
                        "type": "number",
                        "description": "Book's total amount of pages",
                        "example": "123"
                    }
                }
            },
            "AddBookResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "Book's id",
                        "example": "07ef3f4358b773378699381"
                    },
                    "title": {
                        "type": "string",
                        "description": "Book's title",
                        "example": "Harry Porter"
                    },
                    "author": {
                        "type": "string",
                        "description": "Book's author",
                        "example": "J. K. Rowling"
                    },
                    "year": {
                        "type": "number",
                        "description": "Book's year",
                        "example": "1997"
                    },
                    "totalPages": {
                        "type": "number",
                        "description": "Number of pages in a book",
                        "example": "123"
                    },
                    "resume": {
                        "type": "string",
                        "description": "resume",
                        "example": ""
                    },
                    "rating": {
                        "type": "string",
                        "description": "rating",
                        "example": "5"
                    }
                }
            },
            "UpdateBookRequest": {
                "required": [],
                "type": "object",
                "properties": {
                    "resume": {
                        "type": "string",
                        "description": "Book's review",
                        "example": "It's a great book"
                    },
                    "rating": {
                        "type": "string",
                        "description": "Book's rating",
                        "example": "5"
                    }
                }
            },
            "UpdateBookResponse": {
                "required": [],
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "Book's id",
                        "example": "608170ac715ef491300d3d2e"
                    },
                    "resume": {
                        "type": "string",
                        "description": "Book's review",
                        "example": "Harry Potter is a good book"
                    },
                    "rating": {
                        "type": "string",
                        "description": "Book's rating",
                        "example": "5"
                    }
                }
            },
            "RemoveBook": {
                "type": "object",
                "description": "delete",
                "example": {
                    "message": "Success delete"
                }
            },
            "GetCurrent": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "User's name",
                        "example": "User"
                    },
                    "email": {
                        "type": "string",
                        "description": "User's email",
                        "example": "user@example.com"
                    },
                    "planeToRead": {
                        "type": "object",
                        "description": "Information about books which user planes to read",
                        "properties": {
                            "title": {
                                "type": "string",
                                "description": "Book's title",
                                "example": "Harry Porter"
                            },
                            "author": {
                                "type": "string",
                                "description": "Book's author",
                                "example": "J. K. Rowling"
                            },
                            "year": {
                                "type": "number",
                                "description": "Book's year",
                                "example": "2019"
                            },
                            "totalPages": {
                                "type": "number",
                                "description": "Book's numberOfPages",
                                "example": "42"
                            },
                            "resume": {
                                "type": "sting",
                                "description": "resume",
                                "example": ""
                            },
                            "rating": {
                                "type": "sting",
                                "description": "Book's rating",
                                "example": "null"
                            },
                            "_id": {
                                "type": "string",
                                "description": "Book's id",
                                "example": "608170ac715ef491300d3d2e"
                            }
                        }
                    },
                    "readNow": {
                        "type": "object",
                        "description": "Information about books which user reading now",
                        "properties": {
                            "title": {
                                "type": "string",
                                "description": "Book's title",
                                "example": "Harry Porter"
                            },
                            "author": {
                                "type": "string",
                                "description": "Book's author",
                                "example": "J. K. Rowling"
                            },
                            "year": {
                                "type": "number",
                                "description": "Book's year",
                                "example": "2019"
                            },
                            "totalPages": {
                                "type": "number",
                                "description": "Book's numberOfPages",
                                "example": "40"
                            },
                            "resume": {
                                "type": "sting",
                                "description": "resume",
                                "example": ""
                            },
                            "rating": {
                                "type": "sting",
                                "description": "Book's rating",
                                "example": "null"
                            },
                            "_id": {
                                "type": "string",
                                "description": "Book's id",
                                "example": "6081706a715ef491300d3d2d"
                            }
                        }
                    },
                    "readFinish": {
                        "type": "object",
                        "description": "Information about books which user finished reading",
                        "properties": {
                            "title": {
                                "type": "string",
                                "description": "Book's title",
                                "example": "Harry Porter"
                            },
                            "author": {
                                "type": "string",
                                "description": "Book's author",
                                "example": "J. K. Rowling"
                            },
                            "year": {
                                "type": "number",
                                "description": "Book's year",
                                "example": "2013"
                            },
                            "totalPages": {
                                "type": "number",
                                "description": "Book's numberOfPages",
                                "example": "37"
                            },
                            "resume": {
                                "type": "sting",
                                "description": "resume",
                                "example": ""
                            },
                            "rating": {
                                "type": "sting",
                                "description": "Book's rating",
                                "example": "5"
                            },
                            "_id": {
                                "type": "string",
                                "description": "Book's id",
                                "example": "60816fd9d9c36e9cb8b8330a"
                            }
                        }
                    }
                }
            }
        },
        "securitySchemes": {
            "Bearer": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}